<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>3.5.6</version> <!-- ðŸ‘ˆ igual que tus otros mÃ³dulos -->
        <relativePath/>
    </parent>

    <groupId>co.edu.uco</groupId>
    <artifactId>observability-config</artifactId>
    <version>1.0.0</version>
    <packaging>jar</packaging>
    <name>observability-config</name>
    <description>Starter de observabilidad compartido (OpenTelemetry)</description>

    <properties>
        <java.version>21</java.version>
    </properties>

    <dependencies>
        <!-- Necesario para @AutoConfiguration -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-autoconfigure</artifactId>
        </dependency>

        <!-- Actuator (mÃ©tricas/health) -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-actuator</artifactId>
        </dependency>

        <!-- Micrometer Bridge a OpenTelemetry (trazas) -->
        <dependency>
            <groupId>io.micrometer</groupId>
            <artifactId>micrometer-tracing-bridge-otel</artifactId>
        </dependency>

        <!-- Exportador OTLP (hacia Jaeger) -->
        <dependency>
            <groupId>io.opentelemetry</groupId>
            <artifactId>opentelemetry-exporter-otlp</artifactId>
        </dependency>
    </dependencies>
</project>
